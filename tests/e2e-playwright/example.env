# RedisInsight E2E Test Configuration
# Copy this file to .env and update values for your environment

# Application URLs
RI_CLIENT_URL=http://localhost:8080
RI_API_URL=http://localhost:5540

# Electron Desktop App Testing
# Platform-specific paths:
# - macOS arm64: ../../release/mac-arm64/Redis Insight.app/Contents/MacOS/Redis Insight
# - macOS x64:   ../../release/mac-x64/Redis Insight.app/Contents/MacOS/Redis Insight
# - Linux:       ../../release/linux-unpacked/redisinsight
# - Windows:     ../../release/win-unpacked/Redis Insight.exe
ELECTRON_EXECUTABLE_PATH=../../release/mac-arm64/Redis Insight.app/Contents/MacOS/Redis Insight

# Redis Standalone instances (from docker-compose)
OSS_STANDALONE_HOST=127.0.0.1
OSS_STANDALONE_PORT=6379

OSS_STANDALONE_V7_HOST=127.0.0.1
OSS_STANDALONE_V7_PORT=8108

OSS_STANDALONE_V5_HOST=127.0.0.1
OSS_STANDALONE_V5_PORT=8101

OSS_STANDALONE_EMPTY_HOST=127.0.0.1
OSS_STANDALONE_EMPTY_PORT=8105

# Redis Cluster instances
OSS_CLUSTER_HOST=127.0.0.1
OSS_CLUSTER_PORT=8200

# Redis Sentinel instances
OSS_SENTINEL_HOST=127.0.0.1
OSS_SENTINEL_PORT=28100
OSS_SENTINEL_PASSWORD=password
OSS_SENTINEL_MASTER_NAME=primary-group-1

# SSH tunnel configuration (optional)
# REDIS_SSH_HOST=172.31.100.109
# REDIS_SSH_PORT=6379
# SSH_HOST=localhost
# SSH_PORT=2222
# SSH_USERNAME=u
# SSH_PASSWORD=pass

